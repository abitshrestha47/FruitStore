        </tbody>
    </table>
    <!-- End Cart Table -->

    <!-- Total Price -->
    <div class="mt-4">
        <h4 id="overallTotal"></h4>
    </div>
    <div class="updateCart">
        <button type="submit" class="btn btn-primary" id="updateCart">Update</button>
    </div>
    <!-- End Total Price -->
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
