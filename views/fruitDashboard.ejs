<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Dashboard</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/dash.css">
</head>
<body>

<!-- Sidebar -->
    <%- include('sidebar.ejs') %>

<!-- Page Content -->
<div id="content">
  <!-- Navbar -->
    <%- include('navbar.ejs') %>

  <!-- Main Content -->
  <div class="container-fluid">
    <h2 class="mt-4">Add Fruits</h2>
    <form id="fruitForm" style="width:40%;margin-left:0vw;">
        <div class="form-group">
            <label for="fruit">Fruit Name:</label>
            <input type="text" class="form-control" id="fruitName" name="fruitName" required>
        </div>
        <div class="form-group">
            <label for="fruitPrice">Fruit Price:</label>
            <input type="text" class="form-control" id="fruitPrice" name="fruitPrice" required>
        </div>
        <div class="form-group">
            <label for="fruitQuantity">Fruit Quantity:</label>
            <input type="number" class="form-control" id="fruitQuantity" name="fruitQuantity" required>
        </div>
        <div class="form-group">
            <label for="fruitDescription">Fruit Description:</label>
            <input type="text" class="form-control" id="fruitDescription" name="fruitDescription" required>
        </div>  
        <div class="form-group">
          <label for="fruitCategory">Fruit Category:</label>
            <select class="form-control" id="fruitCategory" name="fruitCategory"></select> 
        </div>
        <div class="form-group mb-2">
            <label for="fruitImage">Fruit Image:</label>
            <input type="file" class="form-control" id="fruitImage" name="fruitImage" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Fruit</button>
    </form>
  </div>
  <table class="table mt-3">
    <thead>
      <th>Fruit Name</th>
      <th>Fruit Price</th>
      <th>Fruit Quantity</th>
      <th>Fruit Description</th>
      <th>Fruit Category</th>
      <th>Fruit Image</th>
      <th>Action</th>
    </thead>
    <tbody id="fruitTbody"></tbody>
  </table>
</div>

<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Fruit</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <!-- Edit Product Form -->
          <form id="edit-product-form">
              <div class="form-group">
                <label for="editFruitName">Fruit Name:</label>
                <input type="text" class="form-control" id="editFruitName" name="fruitName" required>
              </div>
              <div class="form-group">
                  <label for="editProductPrice">Fruit Price:</label>
                  <input type="text" class="form-control" id="editFruitPrice" name="fruitPrice" required>
              </div>
              <div class="form-group">
                <label for="editProductQuantity">Fruit Quantity:</label>
                <input type="text" class="form-control" id="editFruitQuantity" name="fruitQuantity" required>
            </div>
              <div class="form-group">
                  <label for="fruitDescription">Fruit Description:</label>
                  <input type="text" class="form-control" id="editFruitDescription" name="fruitDescription" required>
              </div> 
              <div class="form-group">
                <label for="fruitCategory">Category:</label>
                  <select name="fruitCategory" class="form-control" id="editFruitCategory"></select> 
              </div>
              <div class="form-group">
                  <label for="editFruitImage">Product Image:</label>
                  <input type="file" class="form-control" id="editFruitImage" name="editFruitImage"><br>
                  <img src="" alt="" width="70" height="70" id="dbStoredImage">
              </div>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary" id="editSaveBtn">Save changes</button>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS and Popper.js (for Bootstrap functionality) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/fruitDash.js"></script>
</body>
</html>
